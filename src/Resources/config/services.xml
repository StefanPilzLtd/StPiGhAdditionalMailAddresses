<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults autowire="true" autoconfigure="true" />
        <prototype namespace="StPi\AdditionalMailAddresses\" resource="../../" exclude="../../{Components,Exception,Resources,Setup}" />


        <!--***Subscriber***-->
        <service id="StPi\AdditionalMailAddresses\Subscriber\MailSendSubscriber" public="true" autowire="true">
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="StPi\AdditionalMailAddresses\Services\OrderCustomerService" >
            <argument type="service" id="order_customer.repository" />
            <argument type="service" id="customer.repository" />
        </service>


    </services>
</container>
