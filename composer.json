        "manufacturerLink": {
            "de-DE": "https://stefanpilz.ltd",
            "en-GB": "https://stefanpilz.ltd"
        },
        "pluginSupport": {
            "de-DE": "plugins@stefanpilz.ltd",
            "en-GB": "plugins@stefanpilz.ltd"
        },
        "supportLink": {
            "de-DE": "https://stefanpilz.ltd",
            "en-GB": "https://stefanpilz.ltd"
        }
    },
    "require": {
        "php": "^8.1 || ^8.2",
        "shopware/core": "~6.5.2",
        "shopware/storefront": "~6.5.2"
    }
